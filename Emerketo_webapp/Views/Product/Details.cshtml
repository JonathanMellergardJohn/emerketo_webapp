@model Product

<!-- IMG -->
<section class="bg-body-secondary" style="height: 150px"></section>
<!-- PROD DETAILS ONE -->
<section class="bg-white">
    <div class="container">
        <div class="row my-3">
            <div class="col">
                <div class="row mb-2">
                    <img class="img-fluid" src="@Model.ImgUrl" alt="Product Image">
                </div>
                <!-- <div class="row">
                    <div class="_prod-detail-img-sm col me-2"></div>
