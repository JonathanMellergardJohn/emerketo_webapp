                    <div class="_prod-detail-img-sm col"></div>
                </div> -->
            </div>
            <div class="col ms-3">
                <h5 class="row">@Model.Name</h5>
                <p class="row">@Model.ShortDescription</p>
                <div class="row">
                    <div class="d-flex">
                        <span class="me-3">
                            <i class="fa-solid fa-star"></i>
                            <i class="fa-solid fa-star"></i>
                            <i class="fa-solid fa-star"></i>
                            <i class="fa-solid fa-star"></i>
                            <i class="fa-solid fa-star"></i>
                        </span>
                        <span class="me-3">(@Model.Rating)</span>
                        <span class="fst-italic">@Model.NumOfReviews Reviews</span>
                    </div>
                </div>
                <div class="row my-3">
                    <h3>$@Model.Price</h3>
                </div>
                <!-- ADD TO CART -->
                <!-- <div class="row">
                    <div class="d-flex">
                        <div class="d-flex me-3">
                            <div class="border py-2 px-3">-</div>
                            <div class="border py-2 px-3">2</div>
                            <div class="border py-2 px-3">+</div>
                        </div>
                        <button class="btn btn-danger">Add to Cart <i class="fa-sharp fa-solid fa-cart-plus"></i></button>
                    </div>
                </div> -->
                <div class="row mt-4">
                    <div class="d-flex">
                        <span class="me-4">Categories:</span>
                        @if (Model.IsNew)
                        {
                            <span class="px-2 me-4 border border-danger-subtle">New</span>
                        }
                        @if (Model.IsFeatured)
                        {
                            <span class="px-2 me-4 border border-danger-subtle">Featured</span>
                        }
                        @if (Model.IsPopular)
                        {
                            <span class="px-2 me-4 border border-danger-subtle">Popular</span>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
