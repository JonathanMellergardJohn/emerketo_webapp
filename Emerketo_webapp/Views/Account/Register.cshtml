<section class="bg-white">
    <div class="container mt-4">
        <form action="">
            <div class="row">
                <p>Please Register Your New Account</p>
            </div>

            <div class="row">
                <div class="col">
                    <label for="register-form-firstname" class="form-label">First Name*</label>
                    <input type="text" class="form-control" id="register-form-firstname">
                </div>
                <div class="col">
                    <label for="register-form-lastname" class="form-label">Last Name*</label>
                    <input type="text" class="form-control" id="register-form-lastname">
                </div>
            </div>

            <div class="row">
                <div class="col">
                    <label for="register-form-streetname" class="form-label">Street Name*</label>
                    <input type="text" class="form-control" id="register-form-streetname">
                </div>
            </div>

            <div class="row">
                <div class="col">
                    <label for="register-form-postal" class="form-label">Postal Code*</label>
                    <input type="text" class="form-control" id="register-form-postal">
                </div>
                <div class="col">
                    <label for="register-form-city" class="form-label">City*</label>
                    <input type="text" class="form-control" id="register-form-city">
                </div>
            </div>

            <div class="row">
                <div class="col">
                    <label for="register-form-mobile" class="form-label">Mobile</label>
                    <input type="text" class="form-control" id="register-form-mobile">
                </div>
                <div class="col">
                    <label for="register-form-city" class="form-label">Company</label>
                    <input type="text" class="form-control" id="register-form-city">
                </div>
            </div>

            <div class="row">
                <div class="col">
                    <label for="register-form-email" class="form-label">Email</label>
                    <input type="text" class="form-control" id="register-form-email" />
                </div>
            </div>

            <div class="row">
                <div class="col">
                    <label for="register-form-password" class="form-label">Password</label>
                    <input type="text" class="form-control" id="register-form-password" />
                </div>
            </div>

            <div class="row">
                <div class="col">
                    <label for="register-form-confirm" class="form-label">Confirm Password</label>
                    <input type="text" class="form-control" id="register-form-confirm" />
                </div>
            </div>

            <div class="row">
                <div class="col">
                    <label for="register-form-picture" class="form-label">Upload Profile Picture (optional)</label>
                    <input type="text" class="form-control" id="register-form-picture" />
                </div>
            </div>

            <div class="row mt-4">
                <div class="col">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                        <label class="form-check-label" for="flexCheckDefault">I have read and accept the terms and conditions</label>
                    </div>
                </div>
            </div>

            <button type="submit" class="btn btn-danger my-4">Register</button>
        </form>
    </div>
</section>
